{
    "version": 2,
    "builds": [
      {
        "src": "api/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "index.html",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.js"
      },
      {
        "src": "^/static/(.*)",
        "dest": "/src/static/$1"
      },
      {
         "src": "/(.*)\\.png",
         "dest": "/$1.png"
       },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }